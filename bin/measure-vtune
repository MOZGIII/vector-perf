#!/bin/bash
set -euo pipefail

VTUNE_BIN="${VTUNE_BIN:-"vtune"}"
RESULT_DIR="resultdir"

if [[ -d "$RESULT_DIR" ]]; then
  mv -f "$RESULT_DIR" "$RESULT_DIR.old"
fi

"$VTUNE_BIN" \
  -collect hotspots \
  -knob sampling-mode=hw \
  -r "$RESULT_DIR" \
  --target-process vector &

bin/start-socat

"$VTUNE_BIN" \
  -r "$RESULT_DIR" \
  -command stop
